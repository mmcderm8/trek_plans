<h1><%= @activity.name %></h1>

<p>Description: <%= @activity.description %></p>
<p>Created by: <%= @activity.creator.username %></p>

<ul style="list-style: none;">
  <% @reviews.each do |review| %>
    <li>
      Rating: <%= review.rating %> (<%= review.reviewer.username %>) <%= review.body %>
      <p id='voting-number' class="total-votes-<%= review.id %>"><%= review.sum_votes %></p>
      <%= link_to "Delete this Review", admin_activity_review_path(@activity, review), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Delete this Activity", admin_activity_path(@activity), method: :delete %>
